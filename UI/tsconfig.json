{
  "compilerOptions":
  {
    "strict": true,
    "noEmit": true,
    "removeComments": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "Bundler",
    "lib": [ "DOM", "DOM.Iterable", "ESNext" ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins":
    [
      {
        "name": "next"
      }
    ],
    "paths":
    {
      "@app/*": [ "./app/*" ],
      "@components/*": [ "./components/*" ],
      "@lib/*": [ "./lib/*" ],
      "@images/*": [ "./images/*" ]
    }
  },
  "include": [ "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts" ],
  "exclude": [ "node_modules" ]
}
