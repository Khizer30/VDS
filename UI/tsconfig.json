{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "removeComments": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": ["./components/*"],
      "@helpers/*": ["./helpers/*"],
      "@images/*": ["./images/*"],
      "@models/*": ["./models/*"],
      "@app/*": ["./app/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
